{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "aliases": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "type": {
                    "anyOf": [
                        {
                            "type": "string",
                            "enum": [
                                "RUG_PULL",
                                "ASSET_FLIP",
                                "MALICIOUS",
                                "ABANDONWARE",
                                "HOSTILE_DEV",
                                "BROKEN_PROMISES",
                                "AI_SLOP"
                            ]
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "RUG_PULL",
                                    "ASSET_FLIP",
                                    "MALICIOUS",
                                    "ABANDONWARE",
                                    "HOSTILE_DEV",
                                    "BROKEN_PROMISES",
                                    "AI_SLOP"
                                ]
                            }
                        }
                    ]
                },
                "proof_url": {
                    "type": "string",
                    "format": "uri"
                },
                "severity": {
                    "type": "string",
                    "enum": [
                        "critical",
                        "warning",
                        "info"
                    ]
                },
                "notes": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "type",
                "proof_url",
                "severity",
                "notes"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}